<mapper namespace="Pago">
    <insert id="registrarPago" parameterType="map">
        INSERT INTO empenio.pago (nombre)
        VALUES(#{nombre});
    </insert>
    
    <select id="obtenerPagos" resultType="modelo.beans.Pago">
        SELECT * FROM empenio.categorias WHERE Categorias_idCategoria = '1' ORDER BY nombre;
    </select>
</mapper>


